<%= render 'shared/errors', obj: @review %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for ([@recipe, @review]) do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10 %>
      <%= f.submit(@review.new_record? ? 'Add Review' : 'Update Review', class: "btn btn-success") %>
    <% end %>
  </div>
</div>